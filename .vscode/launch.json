{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Jest Current File",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"cwd": "${workspaceFolder}",
			"args": [
				"test",
				"--testPathPattern=${FileBasenameNoExtension}",
				"--runInBand"
			],
			"console": "internalConsole",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
